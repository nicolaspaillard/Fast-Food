@model IEnumerable<Models.Beverage>

@{
    ViewData["Title"] = "Index";
}

<h1>Boissons</h1>

<p>
    <a asp-action="Create">Ajouter Nouvelle</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Millimeter</th>
            <th>Gazeuse</th>
            <th>Nom</th>
            <th>Prix</th>
            <th>Description</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Millimeter)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsCarbonated)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)€
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">Détails</a> |<br />
                    <a asp-action="Edit" asp-route-id="@item.Id">Modifier</a> |<br />
                    <a asp-action="Delete" asp-route-id="@item.Id">Supprimer</a>
                </td>
            </tr>
        }
    </tbody>
</table>
